import React, { useState } from "react";
import "./App.css";
import logo from "./images/download.png"; // path to your logo

function App() {
  const [otpSent, setOtpSent] = useState(false);
  const [otp, setOtp] = useState("");

  const handleSendOtp = () => {
    setOtpSent(true);
    alert("OTP Sent");
  };

  const handleVerify = () => {
    alert(`OTP Entered: ${otp}`);
  };

  return (
    <div className="container">
      <div className="card">
        <div className="logo-container">
          <img src={logo} alt="Standard Chartered" className="logo" />
        </div>
        <div className="profile-icon">ðŸ‘¤</div>
        <h2>Forgot Password</h2>

        <button className="btn btn-green" onClick={handleSendOtp}>
          Send OTP
        </button>

        {otpSent && (
          <>
            <input
              type="text"
              placeholder="Enter OTP"
              value={otp}
              onChange={(e) => setOtp(e.target.value)}
              className="input"
            />
            <button className="btn btn-green" onClick={handleVerify}>
              Verify & Continue
            </button>
          </>
        )}
      </div>
    </div>
  );
}

export default App;







