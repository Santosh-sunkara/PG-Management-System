    <style>
      body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
      }

      .sc-card {
        background-color: #ffffff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0 20px rgba(0, 60, 60, 0.1);
        border: 1px solid #e0e0e0;
      }

      .sc-header {
        color: #007d8a;
        font-weight: 600;
      }

      .btn-sc {
        background-color: #007d8a;
        border-color: #007d8a;
      }

      .btn-sc:hover {
        background-color: #005f6a;
        border-color: #005f6a;
      }

      table th {
        background-color: #007d8a !important;
        color: white;
      }

      .form-label {
        font-weight: 500;
      }

      .form-control, .form-select {
        border-radius: 0.5rem;
      }

      #entriesTable {
        border-radius: 0.5rem;
        overflow: hidden;
      }
    </style>
