import React, { useState } from "react";
import "./App.css";

function App() {
  const [otpSent, setOtpSent] = useState(false);
  const [otp, setOtp] = useState("");

  const handleSendOtp = () => {
    setOtpSent(true);
    alert("OTP sent to your registered email/phone");
  };

  const handleVerify = () => {
    alert(`OTP Entered: ${otp}`);
  };

  return (
    <div className="container">
      <div className="card">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f1/Standard_Chartered.svg/1200px-Standard_Chartered.svg.png"
          alt="logo"
          className="logo"
        />
        <div className="profile-icon">ðŸ‘¤</div>
        <h2>Forgot Password</h2>

        <button className="btn" onClick={handleSendOtp}>
          Send OTP
        </button>

        {otpSent && (
          <>
            <input
              type="text"
              placeholder="Enter OTP"
              value={otp}
              onChange={(e) => setOtp(e.target.value)}
              className="input"
            />
            <button className="btn" onClick={handleVerify}>
              Verify & Continue
            </button>
          </>
        )}
      </div>
    </div>
  );
}

export default App;






body {
  margin: 0;
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
}

