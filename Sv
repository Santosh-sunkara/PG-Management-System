let counter = 2;

function addTestimonial() {
  const name = document.getElementById("nameInput").value.trim();
  const message = document.getElementById("messageInput").value.trim();

  if (!name || !message) {
    alert("Please fill out both fields.");
    return;
  }

  const testimonialsContainer = document.getElementById("testimonials");

  const newDiv = document.createElement("div");
  const id = `test${counter++}`;
  newDiv.className = "testimonial";
  newDiv.id = id;

  newDiv.innerHTML = `
    <p><strong>${name}</strong></p>
    <p>${message}</p>
    <div class="actions">
      <button class="edit-btn" onclick="editTestimonial('${id}')">Edit</button>
      <button class="delete-btn" onclick="deleteTestimonial('${id}')">Delete</button>
    </div>
  `;

  testimonialsContainer.appendChild(newDiv);

  // Clear the form
  document.getElementById("nameInput").value = "";
  document.getElementById("messageInput").value = "";
}

function deleteTestimonial(id) {
  const el = document.getElementById(id);
  if (el) el.remove();
}

function editTestimonial(id) {
  const testimonial = document.getElementById(id);
  const name = testimonial.querySelector("strong").innerText;
  const message = testimonial.querySelectorAll("p")[1].innerText;

  document.getElementById("nameInput").value = name;
  document.getElementById("messageInput").value = message;

  testimonial.remove();
}
