  <script>
    const adgroup = document.getElementById("adgroup");
    const reportDetails = document.getElementById("reportDetails");

    adgroup.addEventListener("change", () => {
      let html = "";
      switch (adgroup.value) {
        case "Wealth Compliance":
          html = `
            <strong>Folder:</strong> Compliance<br/>
            <strong>Reports:</strong> KYC Reports, Dormant Reports, AML Reports
          `;
          break;
        case "Wealth User Admin":
          html = `
            <strong>Folder:</strong> Global User<br/>
            <strong>Reports:</strong> Active User, Inactive User
          `;
          break;
        default:
          html = "<em>Select a group to see details</em>";
      }
      reportDetails.innerHTML = html;
    });
  </script>
