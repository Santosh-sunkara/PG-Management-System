<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JSON Use Case</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding: 30px;
    }
    .json-display {
      margin-top: 20px;
      white-space: pre-wrap;
      background-color: #f8f9fa;
      padding: 15px;
      border-radius: 10px;
      font-family: monospace;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-primary mb-4">Presenting the Use Case on JSON</h2>

    <div class="card p-4 shadow-lg">
      <div class="mb-3">
        <label class="form-label">First Name:</label>
        <input type="text" id="firstName" class="form-control" placeholder="Enter First Name">
      </div>

      <div class="mb-3">
        <label class="form-label">Second Name:</label>
        <input type="text" id="secondName" class="form-control" placeholder="Enter Second Name">
      </div>

      <div class="d-flex gap-3">
        <button class="btn btn-primary" onclick="addUser()">Submit</button>
        <button class="btn btn-info text-white" onclick="displayJSON()">Display JSON Data</button>
      </div>

      <div id="output" class="json-display mt-4"></div>
    </div>
  </div>

  <script>
    const users = [];

    function addUser() {
      const first = document.getElementById('firstName').value.trim();
      const second = document.getElementById('secondName').value.trim();

      if (first && second) {
        users.push({
          FirstName: first,
          LastName: second
        });

        document.getElementById('firstName').value = '';
        document.getElementById('secondName').value = '';
        alert('User added successfully!');
      } else {
        alert('Please enter both names.');
      }
    }

    function displayJSON() {
      const outputDiv = document.getElementById('output');
      outputDiv.textContent = JSON.stringify(users, null, 2);
    }
  </script>
</body>
</html>
